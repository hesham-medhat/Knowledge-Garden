@model Knowledge_Garden.Models.AttachmentViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/LoggedInLayout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this attachment?</h3>
<div>
    <h4>Attachment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>

    @using (Html.BeginForm("Delete" , "Attachments")) {
        @Html.AntiForgeryToken()
        <input type="hidden" value=@Model.FlowerId name="flowerId" />
        <input type="hidden" value="@Model.Name" name="attachmentName" />


        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }
</div>
