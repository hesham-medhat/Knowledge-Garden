@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/LoggedInLayout.cshtml";
}

<h2>Upload Attachment</h2>
<hr />

@using (Html.BeginForm("Create", "Attachments", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        @Html.AntiForgeryToken()

        <input type="hidden" value=@ViewBag.flowerId name="flowerId" />

        <h4>Choose the file you would like to attach</h4>
        <input type="file" name="fileBase" />
        <br />
        <input type="submit" name="Submit" value="Upload" />

    </div>
}

    @Html.ActionLink("Back to List", "Index", new { id = ViewBag.flowerId })

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
